{
  "scripts": {
    "build": "npm run clean && tsc && npm run copy-views && npm run copy-public",
    "clean": "shx rm -rf dist",
    "copy-views": "shx cp -r src/views/ dist",
    "copy-public": "shx cp -r src/public/ dist/public",
    "start": "concurrently --kill-others \"npm:client\" \"npm:web-service\"",
    "client": "node dist/05-client.js",
    "web-service": "node dist/05-cookie-auth-cors.js"
  },
  "dependencies": {
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "pug": "^3.0.2",
    "typescript": "^5.1.6"
  },
  "devDependencies": {
    "@types/node": "^20.8.6",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",    
    "concurrently": "^7.4.0",
    "shx": "^0.3.4"
  }
}
